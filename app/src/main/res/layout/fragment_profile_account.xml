<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FragmentProfileAccount"
    android:background="@color/colorPrimary"
    android:clickable="true"
    >
    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clear_black_24dp"
        android:layout_margin="13dp"
        android:id="@+id/close"
        />
    <RelativeLayout
        android:layout_below="@+id/close"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:id="@+id/ln_info"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/account"
            android:id="@+id/profile_image"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_name"
            android:layout_below="@+id/profile_image"
            android:text="Hoang Long"
            android:textSize="25dp"
            android:layout_marginTop="7dp"
            android:textColor="@color/textPrimary"
            android:textStyle="bold"
            android:layout_marginLeft="13dp"
            android:fontFamily="sans-serif-condensed"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_name"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="13dp"
            android:text="fb.com/hoanglong96"
            android:textSize="20dp"
            android:id="@+id/link_face"
            android:textColor="@color/textPrimary"
            android:fontFamily="sans-serif-condensed"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/link_face"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="13dp">
            <com.willy.ratingbar.ScaleRatingBar
                xmlns:rb="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rating_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                rb:numStars="5"
                rb:rating="5"
                rb:starPadding="15"
                rb:touchable="true"
                android:layout_marginTop="7dp"
                >
            </com.willy.ratingbar.ScaleRatingBar>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv1"
                android:text="("
                android:layout_toRightOf="@+id/rating_user"
                android:textSize="25dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/textPrimary"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:layout_toRightOf="@+id/iv1"
                android:id="@+id/number_of_vote"
                android:text="25"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="12dp"
                android:textColor="@color/textPrimary"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/number_of_vote"
                android:textSize="25dp"
                android:text="vote"
                android:textColor="@color/textPrimary"
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/tv2"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv2"
                android:textSize="25dp"
                android:text=")"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="5dp"/>
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="1"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/ln_info">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ScrollView>
    </RelativeLayout>


</RelativeLayout>
