<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.FragmentProfileAccount"
    android:background="@color/colorPrimary"
    android:clickable="true"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clear_black_24dp"
        android:layout_margin="13dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ln_info"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:src="@drawable/account"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFFFFF"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoàng Long"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            android:layout_gravity="center_horizontal"
            android:fontFamily="serif"
            android:id="@+id/txt_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/link_face"
            android:textColor="@color/textPrimary"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:text="facebook.com/1933984130174980"/>
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:rating="4"
            android:id="@+id/rating"
            />
        <View
            android:layout_width="240dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_favorite_black_24dp"
                />
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number_of_vote"
                android:text="200 đánh giá"
                android:textSize="22dp"
                android:fontFamily="serif"
                android:textColor="@color/textPrimary"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/ln_info">
        <android.support.v7.widget.CardView
            android:layout_width="160dp"
            android:layout_height="200dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/cv1"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bacon"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bacon" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_toRightOf="@+id/cv1"
            android:id="@+id/cv2"
            android:layout_width="120dp"
            android:layout_height="100dp"
            app:cardCornerRadius="10dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/beef_mince"
                android:scaleType="centerCrop"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/cv2"
            android:layout_height="150dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/banh_brownie_chocolate_dang"
                android:scaleType="centerCrop"/>
        </android.support.v7.widget.CardView>
    </RelativeLayout>


</RelativeLayout>
